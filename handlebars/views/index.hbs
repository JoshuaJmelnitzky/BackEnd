<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="css/styles.css">
        <title>Productos</title>

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Baskervville&display=swap" rel="stylesheet">
    </head>

    <body>
        <main>
            <div class="container-fluid">
                <div class="row">
                    <div class="offset-md-4 col-md-8  banner__name">
                        <h2>Bienvenido {{this.name}}</h2>
                        <a href="./logout"><button class="bg-danger">LogOut</button></a>
                    </div>
                </div>
            </div>

            <h1>Nuevo producto</h1>
            <form action="/productos" method = "post">
                <div class="form-container">

                    <label for="title">Title*</label>
                    <input type="text" name="title" id="title" required>
                    
                    <label for="description">Descripción</label>
                    <input type="text" name="description" id="description">
                    
                    <label for="price">Price*</label>
                    <input type="number" step = "0.01" min = "0" name="price" id="price" required>

                    <label for="code">Código del producto*</label>
                    <input type="number" name="code" id="code" required>

                    <label for="stock">Stock*</label>
                    <input type="number" name="stock"  min="0" id="stock" required>
    
                    <label for="thumbnail">Thumbnail*</label>
                    <input type="text" name="thumbnail" id="thumbnail" required>
                    
                    <div class="button-container">
                        
                        <button type="submit">Enviar</button>          
                         
                        <a href="./productos"><button type="button">Ir a Productos</button></a>
                      
                    </div>

                </div>
                
            </form>

            <h1 class="compresion">Chat</h1>
            <form class="chat-form" onsubmit="return addInfo()" >
                <div class="chat-container">

                    <label for="title">Email*</label>
                    <input type="email" name="id" id="nb" required>

                    <label for="title">Nombre*</label>
                    <input type="text" name="name" id="ne" required>

                    <label for="title">Apellido*</label>
                    <input type="text" name="lastName" id="ltNe" required>

                    <label for="title">Alias*</label>
                    <input type="text" name="alias" id="al" required>

                    <label for="title">Edad*</label>
                    <input type="number" name="age" id="age" required>

                    <label for="title">Avatar*</label>
                    <input type="text" name="thumbnail" id="th" required>

                    <label for="title">Mensaje*</label>
                    <input type="text" name="message" id="msn" required>

                    <input type="submit" value="Enviar">

                </div>

                <div id="chat"></div>
    
                </div>
            </form>

        </main>
        
        <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="./client.js"></script>
    </body>

</html>