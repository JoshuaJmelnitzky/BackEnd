<header>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Hardbuy</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/productos">Productos</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/carrito">Carrito</a>
                    </li>
                </ul>

                <a href="/login"><button class="btn btn-outline-success" id="hidden" type="submit">LOGIN</button></a>
                <a href="/signup"><button class="btn btn-outline-success navbar__button--margin" id="hiddenSignUp" type="submit">SIGN UP</button></a>

                {{#if name}}
                    <h3 class="text-white">Bienvenido {{name}}</h3>
                    <a href="/logout" class="userName"><button class="btn btn-outline-danger" type="submit">Desloguearse</button></a>
                    
                    <script>
                        const buttonHidden = document.getElementById('hidden'); 
                        buttonHidden.style.display = 'none';

                        const buttonHiddenSignUp = document.getElementById('hiddenSignUp'); 
                        buttonHiddenSignUp.style.display = 'none';
                    </script>
                {{/if}}
   
             
            </div>
        </div>
    </nav>
</header>