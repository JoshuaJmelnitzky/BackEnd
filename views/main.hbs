<h1 style="color:blue;font-weight:bold;">Nuevo producto</h1>
<form action="/productos" method="post">
    <label for="title">Nombre</label>
    <input type="text" name="title" id="title" required><br>
    <label for="price">Precio</label>
    <input type="text" name="price" id="price" required><br>
    <label for="thumbnail">URL*</label>
    <input type="text" name="thumbnail" id="thumbnail" required><br>
    <input type="submit" value="Enviar" onclick="e.preventDefault">
</form>


<div >
	{{#if productos}}
        <table>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
		    {{#each productos}}
			    <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td>
                        <img src={{this.thumbnail}} style="width: 50px;"></img>
                    </td>
                </tr>
		    {{/each}}
        </table>
	{{else}}
		<span>No hay productos</span>
	{{/if}}

</div>


<div>
	<h1 style="color:blue;font-weight:bold;">Centro de mensajes</h1>
	<form id="messages">

		<label for="email">Email</label>
		<input type="email" id="email">
		<label for="message">Mensaje</label>
		<input type="text" id="message">
		<button type="submit">Submit</button>
	</form>
	<div id="errors">

	</div>
	<hr>
	<div >
		<ul id="chat">
		{{#if messages}}
		
			{{#each messages}}
				<li>
					<span style="color: blue; font-weight:bold;">{{this.email}}: </span>
					<span style="color: red;">[{{this.date}}]</span>
					<span style="color: green; font-style: italic;">{{this.message}}</span>
				</li>
			{{/each}}
		{{else}}
			<span>No hay mensajes</span>
		{{/if}}
		</ul>

	</div>
</div>

